" UI
set guifont=Source_Code_Pro_Light:h16
set lines=40 columns=110
set guioptions-=L
set guioptions-=r

" Spell check
autocmd FileType setlocal nospell

" Input Method
set noimdisable
autocmd! InsertLeave * set imdisable|set iminsert=0
autocmd! InsertEnter * set noimdisable|set iminsert=0

" Error bell
set noeb
set vb t_vb=

" Mappings
imap <Esc> <Esc><Esc>
imap {<Return>  {<Return>}<Esc>O
imap [  []<Esc>i
imap (  ()<Esc>i
imap <  <><Esc>i
imap '  '<Esc>vypi
imap "  "<Esc>vypi
